/*Escreva um programa em C que utilize uma Estrutura aluno para conter duas notas, lidas do
usu ́ario, e sua m ́edia.*/

#include <stdio.h>

typedef struct {
    int nota1;
    int nota2;
    float media;
}Alunos;

int main() {
    // Write C code here
    Alunos aluno;
    printf("Calcular nota\n");
    printf("Digite a primeira nota do aluno: ");
    scanf("%d", &aluno.nota1);
    printf("Digite a segunda nota do aluno: ");
    scanf("%d", &aluno.nota2);

    printf("Media do aluno: %d\n", (aluno.nota1 + aluno.nota2) /2 );

    return 0;
}
