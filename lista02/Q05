#include <stdio.h>

int main()
{
    int control, maior, menor, c = 0;
    while (control != 0) {
        puts("Digite um número/Digite 0 para parar: ");
        scanf("%d", &control);
        c = c + 1;
        if (c == 1) {
            maior = control;
            menor = control;
        }
        else if (maior < control) {
            maior = control;
        }
        else if (menor > control & control != 0) {
            menor = control;
        }
        
    } 
    printf("O maior número digitado é %d\n", maior);
    printf("O menor número digitado é %d\n", menor);
    
    return 0;
}
