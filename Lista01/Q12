#include <stdio.h>

int main() {
  int n1,n2 = 0;
  float op, t = 0.0;
  
  printf("Digite um número qualquer: \n");
  scanf("%d", &n1);
  printf("Digite outro número qualquer: \n");
  scanf("%d", &n2);
  if (n2 > n1) {
    t = n1;
    n1 = n2;
    n2 = t;
  }
  printf("A soma: %.2f", op = n1 + n2);
  printf("O produto: %.2f", op = n1*n2);
  printf("A diferença: %.2f", op = n1-n2);
  printf("O quociente: %.2f",op = (float)n1 / n2);
  printf("O resto da divisão: %.2f", op = n1 % n2);
  return 0;
}
