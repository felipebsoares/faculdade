
#include <stdio.h>

int main()
{
    int n1, n2;
    do {
        puts("Digite um número: ");
        scanf("%d", &n1);
        puts("Digite outro número *não nulo*: ");
        scanf("%d", &n2);
        
    }while( n2 == 0);
    printf("A divisão do primeiro pelo segundo é %.2f", (float)n1/n2);
    return 0;
}
