#include <stdio.h>

int main() {
  int n, i = 0;
  printf("---PAR OU ÍMPAR---\n");
  printf("Digite um número inteiro: ");
  scanf("%d", &n);
  i = (n % 2 == 0) ? 0 : 1;
  switch (i) {
    case 0:
      printf("O número é par!");
    break;
    case 1:
      printf("O número é ímpar!");
    break;
  }
  return 0;
}
