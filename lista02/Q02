#include <stdio.h>

int main()
{
    int dia, continua;
    do {
        printf("Digite um número de 1 a 7: \n");
        scanf("%d", &dia);
    
        switch(dia) {
            case 1:
                printf("Este número representa o domingo na semana\n");
            break;
            case 2:
                printf("Este número representa a segunda na semana\n");
            break;
            case 3:
                printf("Este número representa a terça na semana\n");
            break;
            case 4:
                printf("Este número representa a quarta na semana\n");
            break;
            case 5:
                printf("Este número representa a quinta na semana\n");
            break;
            case 6:
                printf("Este número representa a sexta na semana\n");
            break;
            case 7:
                printf("Este número representa o sábado na semana\n");
            break;
            default:
                printf("O número digitado não é válido!\n");
            break;
        }
        printf("Digite 1 para continuar outro número para sair: ");
        scanf("%d", &continua);
    }while (continua == 1);
    
    return 0;
    
}
